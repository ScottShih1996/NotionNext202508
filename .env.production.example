# 生产环境配置示例
# 复制此文件为 .env.production 并填入实际值

# 网站基本信息
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME=Your Blog Name
NEXT_PUBLIC_SITE_DESCRIPTION=Your blog description for SEO

# Notion配置
NOTION_TOKEN=your_notion_integration_token
NOTION_DATABASE_ID=your_notion_database_id

# SEO优化配置
SEO_DEBUG_MODE=false
ENABLE_SEO_OPTIMIZATION=true
ENABLE_STRUCTURED_DATA=true
ENABLE_PERFORMANCE_MONITORING=true

# 分析和监控
ANALYTICS_GOOGLE_ID=your_google_analytics_id
ANALYTICS_ENDPOINT=https://yourdomain.com/api/analytics

# 社交媒体
TWITTER_HANDLE=@yourtwitterhandle
FACEBOOK_APP_ID=your_facebook_app_id

# 性能优化
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_RESOURCE_PRELOADING=true
ENABLE_WEB_VITALS_MONITORING=true

# 安全配置
ENABLE_CSP=true
ENABLE_SECURITY_HEADERS=true

# 缓存配置
CACHE_MAX_AGE=3600
STATIC_CACHE_MAX_AGE=31536000